# Instagram App Configuration
NODE_ENV=production
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_REDIRECT_URI=https://your-app.railway.app/api/auth/instagram/callback
INSTAGRAM_BOT_ACCESS_TOKEN=your_instagram_bot_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id

# Webhook Configuration
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Frontend URL
FRONTEND_URL=https://your-frontend-url.netlify.app

# Redis Configuration (Railway will auto-provide REDIS_URL)
REDIS_URL=redis://default:password@host:port

# Server Configuration (Railway auto-provides PORT)
PORT=4000

# Admin Configuration
ADMIN_KEY=your-secret-admin-key-2024

# Migration Settings
AUTO_MIGRATE=true
